<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_gray_rect"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_like_heart_outline"/>

            <customfonts.MyTextView_sfuitext_regular
                android:id="@+id/offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/green"
                android:padding="4dp"
                android:text="25%"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/shoes3"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <customfonts.MyTextView_sfuitext_regular
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$120"
                android:textColor="@color/green"
                android:textSize="14sp" />

            <customfonts.MyTextView_sfuitext_regular
                android:id="@+id/cutprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/promoprice" />

        </LinearLayout>

        <customfonts.MyTextView_sfuitext_regular
            android:id="@+id/shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/description"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>